# Application
NODE_ENV=development
PORT=3002

# Database (PostgreSQL upload database from infrastructure)
DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/video_processing_upload?schema=public"

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_VIDEOS=videos
MINIO_BUCKET_THUMBNAILS=thumbnails

# RabbitMQ
RABBITMQ_URL=amqp://admin:admin123@localhost:5672
RABBITMQ_QUEUE_VIDEO_PROCESSING=video.processing
RABBITMQ_QUEUE_VIDEO_FAILED=video.processing.failed

# JWT (para validação de tokens do MS-Auth)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# File Upload
MAX_FILE_SIZE=524288000
ALLOWED_MIME_TYPES=video/mp4,video/avi,video/mov,video/quicktime

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
